<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="10dp"
            android:weightSum="100"
            android:gravity="center">
            <Button
                android:id="@+id/new_reservation_select_date"
                android:layout_width="0dp"
                android:layout_weight="40"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="Select Date"
                android:textAllCaps="false"/>
            <TextView
                android:id="@+id/new_reservation_selected_date"
                android:layout_width="0dp"
                android:layout_margin="8dp"
                android:layout_weight="60"
                android:layout_height="match_parent"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="10dp"
            android:weightSum="100"
            android:gravity="center">
            <Button
                android:id="@+id/new_reservation_select_start_time"
                android:layout_width="0dp"
                android:layout_weight="40"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="Start Time"
                android:textAllCaps="false"/>
            <TextView
                android:id="@+id/new_reservation_selected_start_time"
                android:layout_width="0dp"
                android:layout_margin="8dp"
                android:layout_weight="60"
                android:visibility="gone"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="100">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="17sp"
                android:gravity="center"
                android:text="Hours of Use"/>
            <EditText
                android:id="@+id/new_reservation_duration"
                android:layout_width="0dp"
                android:layout_weight="40"
                android:maxLength="1"
                android:inputType="number"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <Button
            android:id="@+id/new_reservation_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:text="Save"
            android:textAllCaps="false"/>
    </LinearLayout>
</ScrollView>