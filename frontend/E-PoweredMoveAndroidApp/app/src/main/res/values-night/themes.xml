<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EPoweredMoveApp" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1C1C1C</item>
        <item name="colorPrimaryVariant">#424242</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <item name="colorSecondary">#03DAC6</item>
        <item name="colorSecondaryVariant">#018786</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="search_view_colors">@style/SearchView</item>
        <item name="fragment_background">#1C1C1C</item>
        <item name="dialog_color">#1C1C1C</item>
    </style>
    <style name="SearchView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>
</resources>